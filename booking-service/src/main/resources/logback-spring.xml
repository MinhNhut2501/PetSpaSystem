<configuration scan="true">

    <!-- Tên app lấy từ Spring -->
    <springProperty scope="context" name="APP_NAME" source="spring.application.name" defaultValue="booking-service"/>

    <!-- File log -->
    <property name="LOG_PATH" value="logs/${APP_NAME}.log"/>

    <!-- Console appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <!-- Thời gian -->
                <timestamp>
                    <timeZone>UTC</timeZone>
                </timestamp>
                <!-- MDC (traceId) -->
                <mdc/>
                <!-- Logger name -->
                <loggerName/>
                <!-- Level -->
                <logLevel/>
                <!-- Thread -->
                <threadName/>
                <!-- Message -->
                <message/>
                <!-- Exception -->
                <stackTrace/>
            </providers>
        </encoder>
    </appender>

    <!-- File appender -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/${APP_NAME}.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp>
                    <timeZone>UTC</timeZone>
                </timestamp>
                <mdc/>
                <loggerName/>
                <logLevel/>
                <threadName/>
                <message/>
                <stackTrace/>
            </providers>
        </encoder>
    </appender>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

</configuration>
